<div class="container" style="padding-top: 20px">
<h1>Dashboard - Bookings</h1>
  <button class="btn-primary mx-sm-2">
    <%= link_to dashboard_moto_path do %>
      <div style="color: white; font-weight: bold">Go to the Moto DASHBOARD</div>
    <% end %>          
  </button>
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="message">
        <div class="message-name">
          <%= booking.motorcycle_id %>
          <%= booking.status %>
        </div>
        <div class="message-name">
          <%= booking.start_date %>
          <%= booking.end_date %>
        </div>
        <div class="message-name">
        INSERT USER COMMENT HERE
        </div>  
        <div class="message-name">
          <button class="btn-primary mx-sm-2">
            <%= link_to "accept", update_booking_path(id: booking, status: "accepted"), method: "patch" %>
          </button>
          <button class="btn-primary mx-sm-2">
            <%= link_to "decline", update_booking_path(id: booking, status: "declined"), method: "patch" %>
          </button>
          <button class="btn-primary mx-sm-2">
            <%= link_to "delete", 
                  motorcycle_booking_path(motorcycle_id: booking.motorcycle_id, id: booking),
                        method: "delete", 
                        data: { confirm: 'Are you sure you want to delete this wonderful piece of money-makin?' } %>    
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
