<div class="container" style="padding-top: 20px">
<h1>Bookings</h1>
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="message">
        <div class="message-name">
          <%= booking.motorcycle_id %>
          <%= booking.status %>
        </div>
        <div class="message-name">
          <%= booking.start_date %>
          <%= booking.end_date %>
        </div>
        <div class="message-name">
        INSERT USER COMMENT HERE
        </div>  
        <div class="message-name">
          <button class="btn-primary mx-sm-2">
            <%= link_to "accept", update_booking_path(id: booking, status: "accepted"), method: "patch" %>
          </button>
          <button class="btn-primary mx-sm-2">
            <%= link_to "decline", update_booking_path(id: booking, status: "declined"), method: "patch" %>
          </button>
          <button class="btn-primary mx-sm-2">
            <%= link_to "delete", 
                  motorcycle_booking_path(motorcycle_id: booking.motorcycle_id, id: booking),
                        method: "delete", 
                        data: { confirm: 'Are you sure you want to delete this wonderful piece of money-makin?' } %>    
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container" style="padding-top: 20px">
<h1>Motorcycles</h1>
  <button class="btn-primary mx-sm-2">
    <%= link_to new_motorcycle_path do %>
      <div style="color: white; font-weight: bold">Add a motorcycle HERE</div>
    <% end %>          
  </button>
  <div class="row">
    <% @motorcycles.each do |motorcycle| %>
      <div class="message">
        <div class="message-name">
    			<%= motorcycle.name %>
	    	</div>
	    	<div class="message-name">
	    		<%= motorcycle.price %>
	    	</div>
	    	<div class="message-name">
	    		<%= motorcycle.description %>
	    	</div>
    	 	<div class="message-name">
    	 	  <button class="btn-primary mx-sm-2">
    				<%= link_to edit_motorcycle_path(motorcycle) do %>
      				<div style="color: white; font-weight: bold">edit</div>
					    	<% end %>          
  				</button>
    	 	  <button class="btn-primary mx-sm-2">
					  <%= link_to "delete", 
                  motorcycle_path(motorcycle),
                        method: "delete", 
                        data: { confirm: 'Are you sure you want to delete this wonderful piece of art?' } %>    
  				</button>
	    	</div>
    	</div>
    <% end %>
  </div>
 </div>
